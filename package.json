  "devDependencies": {
    "@spudly/eslint-config": "^5.0.0",
    "babel-cli": "^6.22.2",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-define": "^1.2.0",
    "babel-preset-env": "^1.1.8",
    "babel-preset-stage-2": "^6.22.0",
    "chalk": "1.1.3",
    "eslint": "^3.15.0",
    "filesize": "^3.5.4",
    "fs-extra": "^2.0.0",
    "jest": "^18.1.0",
    "lint-staged": "^3.3.1",
    "pify": "^2.3.0",
    "postcss": "^5.2.14",
    "postcss-cli": "^2.6.0",
    "postcss-import": "^9.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "^0.18.0",
    "webpack": "^2.2.1"
  },
  "dependencies": {
    "express": "^4.14.1",
    "normalize.css": "^5.0.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-gravatar": "^2.6.1",
    "react-router-dom": "^4.0.0-beta.4",
    "regenerator-runtime": "^0.10.1",
    "request": "^2.79.0",
    "uuid": "^3.0.1"
  },
  "scripts": {
    "start": "NODE_ENV=production node build/index.server.js",
    "build": "NODE_ENV=production babel-node scripts/build.js",
    "test": "jest",
    "lint:staged": "lint-staged",
    "lint": "eslint ."
  },
  "eslintConfig": {
    "extends": "@spudly"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": 7
          }
        }
      ],
      "stage-2"
    ],
    "plugins": [
      [
        "transform-define",
        "./scripts/utils/transformDefine.js"
      ]
    ]
  },
  "now": {
    "alias": "stephensorensen.com"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write --print-width=100 --single-quote --trailing-comma --bracket-spacing=false 'src/**/*.js' 'scripts/**/*.js'",
      "git add"
    ]
  },
  "pre-commit": "lint:staged"
}
