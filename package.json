{
  "name": "@spudly/stephensorensen.com",
  "private": true,
  "version": "0.0.9",
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.0",
    "prettier": "^1.11.1",
    "ts-jest": "^22.4.2",
    "typescript": "^2.8.1"
  },
  "scripts": {
    "//now-start": "babel-node index.server.js",
    "//build": "rollup -c",
    "start": "parcel src/index.html",
    "//deploy": "now -e TWITTER_CONSUMER_KEY -e TWITTER_CONSUMER_SECRET",
    "//deploy:alias": "now alias",
    "test": "jest",
    "lint": "eslint src"
  },
  "now": {
    "alias": "stephensorensen.com"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write --print-width=100 --single-quote --bracket-spacing=false --trailing-comma=all",
      "git add"
    ]
  },
  "engines": {
    "node": "9.x.x"
  },
  "dependencies": {
    "date-fns": "^1.29.0",
    "parcel-bundler": "^1.6.2",
    "postcss-cssnext": "^3.0.2",
    "ramda": "^0.25.0",
    "react": "^16.3.0-alpha.3",
    "react-dom": "^16.3.0-alpha.3",
    "uuid": "^3.2.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
