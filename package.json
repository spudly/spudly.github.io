{
  "name": "@spudly/stephensorensen.com",
  "private": true,
  "version": "0.0.9",
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "@types/ramda": "^0.25.21",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.0",
    "now": "^11.1.2",
    "prettier": "^1.11.1",
    "ts-jest": "^22.4.2",
    "typescript": "^2.8.1"
  },
  "scripts": {
    "now-start": "serve --single --port 80 dist",
    "build": "rm -rf dist && parcel build src/index.html --public-url .",
    "start": "parcel src/index.html",
    "deploy": "now",
    "deploy:alias": "now alias",
    "test": "jest",
    "lint": "eslint src",
    "ts": "tsc --noEmit --pretty"
  },
  "now": {
    "alias": "stephensorensen.com"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write --print-width=100 --single-quote --bracket-spacing=false --trailing-comma=all",
      "git add"
    ]
  },
  "engines": {
    "node": "9.x.x"
  },
  "dependencies": {
    "@types/date-fns": "^2.6.0",
    "@types/react": "^16.1.0",
    "@types/react-dom": "^16.0.4",
    "@types/uuid": "^3.4.3",
    "date-fns": "^1.29.0",
    "parcel-bundler": "^1.6.2",
    "postcss-cssnext": "^3.0.2",
    "ramda": "^0.25.0",
    "react": "^16.3.0-alpha.3",
    "react-dom": "^16.3.0-alpha.3",
    "serve": "^6.5.4",
    "uuid": "^3.2.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
  },
  "browserslist": ["last 2 Chrome versions"]
}
