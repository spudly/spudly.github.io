{
  "name": "@spudly/stephensorensen.com",
  "private": true,
  "version": "0.0.9",
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/ramda": "^0.25.24",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.4",
    "now": "^11.1.7",
    "prettier": "^1.12.1",
    "ts-jest": "^22.4.4",
    "typescript": "^2.8.3"
  },
  "scripts": {
    "now-start": "serve --single --port 80 dist",
    "build": "rm -rf dist && parcel build src/index.html --public-url .",
    "start": "parcel src/index.html",
    "deploy": "now",
    "deploy:alias": "now alias",
    "test": "jest",
    "lint": "eslint src",
    "ts": "tsc --noEmit --pretty"
  },
  "now": {
    "alias": "stephensorensen.com"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write --print-width=100 --single-quote --bracket-spacing=false --trailing-comma=all",
      "git add"
    ]
  },
  "engines": {
    "node": "9.x.x"
  },
  "dependencies": {
    "@types/date-fns": "^2.6.0",
    "@types/react": "^16.3.12",
    "@types/react-dom": "^16.0.5",
    "@types/uuid": "^3.4.3",
    "classnames": "^2.2.5",
    "date-fns": "^1.29.0",
    "parcel-bundler": "^1.7.1",
    "postcss-cssnext": "^3.0.2",
    "ramda": "^0.25.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "serve": "^7.0.0",
    "uuid": "^3.2.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "browserslist": [
    "last 2 Chrome versions"
  ]
}
